<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fionera.wechatdemo" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BluetoothActivity"
            android:label="@string/title_activity_bluetooth" />
        <activity
            android:name=".HandlerActivity"
            android:label="@string/title_activity_handler" />
        <activity
            android:name=".ExtraActivity"
            android:label="@string/title_activity_extra" />
        <activity
            android:name=".extra.MatrixActivity"
            android:label="@string/title_activity_matrix" />
        <activity
            android:name=".extra.PullToRefreshActivity"
            android:label="@string/title_activity_pull_to_refresh" />
        <activity
            android:name=".extra.SplitPageActivity"
            android:label="@string/title_activity_split_page" />
        <activity
            android:name=".extra.PullToLoadActivity"
            android:label="@string/title_activity_pull_to_load" />
        <activity
            android:name=".extra.JSONActivity"
            android:label="@string/title_activity_json" />
        <activity
            android:name=".extra.RecycleActivity"
            android:label="@string/title_activity_recycle"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".extra.GenericAdapterActivity"
            android:label="@string/title_activity_generic_adapter" >
        </activity>
        <activity
            android:name=".extra.QRCodeActivity"
            android:label="@string/title_activity_qrcode" >
        </activity>
    </application>

</manifest>
