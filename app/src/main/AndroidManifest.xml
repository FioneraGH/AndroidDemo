<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fionera.wechatdemo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.screen.landscape" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".application.DemoApplication"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HandlerActivity"
            android:label="@string/title_activity_handler" />
        <activity
            android:name=".ExtraActivity"
            android:label="@string/title_activity_extra" />
        <activity
            android:name=".extra.MatrixActivity"
            android:label="@string/title_activity_matrix" />
        <activity
            android:name=".extra.PullToRefreshActivity"
            android:label="@string/title_activity_pull_to_refresh" />
        <activity
            android:name=".extra.SplitPageActivity"
            android:label="@string/title_activity_split_page" />
        <activity
            android:name=".extra.PullToLoadActivity"
            android:label="@string/title_activity_pull_to_load" />
        <activity
            android:name=".extra.JSONActivity"
            android:label="@string/title_activity_json" />
        <activity
            android:name=".extra.RecycleActivity"
            android:label="@string/title_activity_recycle"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".extra.GenericAdapterActivity"
            android:label="@string/title_activity_generic_adapter" />

        <!-- 第三方Barcode的二维码扫描相关Activity -->
        <activity
            android:name=".CaptureActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".extra.WifiBlueNFCActivity"
            android:label="@string/title_activity_wifi_blue_nfc" />
        <activity
            android:name=".extra.VolleyActivity"
            android:label="@string/title_activity_volley" />

    </application>

</manifest>
