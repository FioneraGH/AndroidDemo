<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    android:id="@+id/rg_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_home_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#606666"
        android:button="@null"
        android:text="Hello World 1"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_home_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#660666"
        android:text="Hello World 2"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_home_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666066"
        android:padding="20dp"
        android:text="Hello World 3"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_home_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666606"
        android:buttonTint="#0000ff"
        android:text="Hello World 4"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_home_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666660"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:gravity="center"
        android:text="Hello World 5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_home_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666660"
            android:gravity="center"
            android:text="Hello World 6"
            android:textCursorDrawable="@null"
            android:textDirection="firstStrong"
            android:textSize="22sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_home_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除选中"/>
</RadioGroup>