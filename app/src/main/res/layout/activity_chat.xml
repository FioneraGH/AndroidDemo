<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/grey2">

        <ImageView
            android:id="@+id/iv_toggle_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/black2">

        <TextView
            android:id="@+id/tv_extra_function"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/ic_launcher"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_send_message"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_send_msg"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/sl_chat_btn_send"
            android:text="发送"
            android:textColor="@color/sl_chat_btn_send_font"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_chat_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/rl_header"
        android:background="@color/white1"
        android:dividerHeight="1px"
        android:scrollbars="none"/>

    <com.fionera.demo.view.ArcMenu
        android:id="@+id/arc_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_margin="4dp"
        app:position="right_top"
        app:radiu="150dp">

        <ImageView
            android:id="@+id/iv_arc_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_launcher"
            android:tag="SUB1"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_launcher"
            android:tag="SUB2"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_launcher"
            android:tag="SUB3"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_launcher"
            android:tag="SUB4"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_launcher"
            android:tag="SUB5"/>

    </com.fionera.demo.view.ArcMenu>

</RelativeLayout>

