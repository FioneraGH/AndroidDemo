<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_sticky_header"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sticky_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="神奇動物在哪裏"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观众"
                android:textColor="#55000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_sticky_header_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.0 "
                android:textColor="#FFCE42"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | 专业"
                android:textColor="#55000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_sticky_header_professional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.7"
                android:textColor="#FFCE42"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sticky_header_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="神奇動物城，法師顯超能"
            android:textColor="#99000000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_sticky_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="今天165家影院放映2088场"
            android:textColor="#99000000"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
