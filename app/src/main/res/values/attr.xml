<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArcMenu">
        <attr name="position">
            <enum name="left_top" value="0"/>
            <enum name="left_bottom" value="1"/>
            <enum name="right_top" value="2"/>
            <enum name="right_bottom" value="3"/>
        </attr>
        <attr name="radiu" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ChangeableTabView">
        <attr name="ctab_icon" format="reference"/>
        <attr name="ctab_color" format="color"/>
        <attr name="ctab_text" format="string"/>
        <attr name="ctab_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleTextImageView">
        <attr name="citv_border_width" format="dimension" />
        <attr name="citv_border_color" format="color" />
        <attr name="citv_border_overlay" format="boolean" />
        <attr name="citv_fill_color" format="color" />
        <attr name="citv_text_text" format="string"/>
        <attr name="citv_text_color" format="color"/>
        <attr name="citv_text_size" format="dimension"/>
        <attr name="citv_text_padding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="left_height" format="dimension" />
        <attr name="left_width" format="dimension" />
        <attr name="right_height" format="dimension" />
        <attr name="right_width" format="dimension" />
        <attr name="top_height" format="dimension" />
        <attr name="top_width" format="dimension" />
        <attr name="bottom_height" format="dimension" />
        <attr name="bottom_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RichText">
        <attr name="place_holder" format="reference" />
        <attr name="error_image" format="reference" />
        <attr name="default_width" format="dimension" />
        <attr name="default_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundCornerIndicaor">
        <!-- width of indicators -->
        <attr name="rci_width" format="dimension"/>
        <!-- height of indicators -->
        <attr name="rci_height" format="dimension"/>
        <!-- the spacing between the indicator. -->
        <attr name="rci_gap" format="dimension"/>
        <!-- cornerRadius of the indicator. -->
        <attr name="rci_cornerRadius" format="dimension"/>
        <!-- width of the stroke used to draw the indicators. -->
        <attr name="rci_strokeWidth" format="dimension"/>
        <!-- color of the indicator that represents the current page. -->
        <attr name="rci_selectColor" format="color"/>
        <!-- color of the indicator that represents pages. -->
        <attr name="rci_unselectColor" format="color"/>
        <!-- color of the stroke used to draw the indicators. -->
        <attr name="rci_strokeColor" format="color"/>
        <!-- Whether or not the selected indicator snaps to the indicators. -->
        <attr name="rci_isSnap" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FlycoPageIndicator">
        <!-- indicator width, unit dp,default 6dp -->
        <attr name="fpi_width" format="dimension"/>
        <!-- indicator height,unit dp,default 6dp -->
        <attr name="fpi_height" format="dimension"/>
        <!-- indicator space between two indicators,unit dp,default 6dp -->
        <attr name="fpi_gap" format="dimension"/>
        <!-- width of the stroke used to draw the indicators,default 0dp -->
        <attr name="fpi_strokeWidth" format="dimension"/>
        <!-- color of the stroke used to draw the indicators,default "#ffffff" -->
        <attr name="fpi_strokeColor" format="color"/>
        <!-- Whether or not the selected indicator snaps to the indicators,default false -->
        <attr name="fpi_isSnap" format="boolean"/>
        <!-- indicator select color ,default "#ffffff" -->
        <attr name="fpi_selectColor" format="color"/>
        <!-- indicator unselect color ,default "#88ffffff"  -->
        <attr name="fpi_unselectColor" format="color"/>
        <!-- indicator corner raduis ,unit dp,default 3dp -->
        <attr name="fpi_cornerRadius" format="dimension"/>
        <!-- indicator select drawable resource -->
        <attr name="fpi_selectRes" format="reference"/>
        <!-- indicator unselect drawable resource -->
        <attr name="fpi_unselectRes" format="reference"/>
    </declare-styleable>

    <!--轮播图-->
    <declare-styleable name="BaseBanner">
        <attr name="bb_scale" format="float"/>
        <attr name="bb_isLoopEnable" format="boolean"/>
        <attr name="bb_delay" format="integer"/>
        <attr name="bb_period" format="integer"/>
        <attr name="bb_isAutoScrollEnable" format="boolean"/>
        <attr name="bb_barColor" format="color"/>
        <attr name="bb_isBarShowWhenLast" format="boolean"/>
        <attr name="bb_barPaddingBottom" format="dimension"/>
        <attr name="bb_barPaddingLeft" format="dimension"/>
        <attr name="bb_barPaddingRight" format="dimension"/>
        <attr name="bb_barPaddingTop" format="dimension"/>
        <attr name="bb_textColor" format="color"/>
        <attr name="bb_textSize" format="dimension"/>
        <attr name="bb_isTitleShow" format="boolean"/>
        <attr name="bb_isIndicatorShow" format="boolean"/>
        <attr name="bb_indicatorGravity">
            <enum name="CENTER" value="17"/>
            <enum name="LEFT" value="3"/>
            <enum name="RIGHT" value="5"/>
        </attr>
    </declare-styleable>

</resources>